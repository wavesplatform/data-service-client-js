{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "outDir": "dist/",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "es2017",
      "es2015.promise",
      "dom"
    ]
  },
  "exclude": [
    "*.sandbox.js",
    "*.sandbox.ts",
    "**/__tests__/**"
  ],
  "include": [
    "src/**/*",
    "node_modules/*"
  ]
}
